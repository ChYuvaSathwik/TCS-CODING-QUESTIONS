def size_slide(N):
    sathwik = []
    count = 0
    shoes = {}

    for i in range(N):
        size, side = input().split()
        size = int(size)

       
        if size not in shoes:
            shoes[size] = {"L": 0, "R": 0}

      
        shoes[size][side] = shoes[size][side] + 1

    for size in shoes:
        pair_count = min(shoes[size]["L"], shoes[size]["R"])
        count = count + pair_count

    return count



N = int(input())
print(size_slide(N))

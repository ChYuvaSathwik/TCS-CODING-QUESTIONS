def longest_substring_palindrome(N):
    M=[]
    Praneeth=""
    F=float("-inf")
    for i in range(len(N)):
        for j in range(i+1,len(N)+1):
            sathwik=N[i:j]
            if sathwik==sathwik[::-1]:
                M.append(sathwik)
    for k in M:
        if len(k)>F:
            F=len(k)
            Praneeth=k
    return Praneeth
N=input()
print(longest_substring_palindrome(N))
